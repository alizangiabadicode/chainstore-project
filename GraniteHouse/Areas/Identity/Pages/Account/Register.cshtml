@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div class="row">
    <div class="col-0 col-md-4"></div>
    <div class="col-12 col-md-4">
        <h2 class="scale-in-center text-info text-center">@ViewData["Title"]</h2>

        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4 class="scale-in-center text-center text-primary">Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group scale-in-center">
                <label asp-for="Input.Name"></label>
                <input asp-for="Input.Name" class="form-control" />
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-group scale-in-center">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group scale-in-center">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group scale-in-center">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group scale-in-center">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group scale-in-center">
                <label hidden asp-for="Input.IsAdmin"></label>
                <input checked="checked" hidden asp-for="Input.IsAdmin" class="" style="margin-left: 50px" />
            </div>

            <button type="submit" class="btn btn-outline-primary">Register</button>
        </form>
    </div>
    <div class="col-0 col-md-4"></div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
