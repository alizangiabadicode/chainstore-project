@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<br/>
<h2 class="scale-in-center text-center text-info">ورود</h2>
<div class="row">
    <div class="col-0 col-md-4"></div>
    <div class="col-12 col-md-4">
        <section>
            <form method="post">
                <h4 class="scale-in-center text-primary text-center"></h4>
                <hr/>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group scale-in-center">
                    <label asp-for="Input.Email" class="d-block text-right">ایمیل</label>
                    <input asp-for="Input.Email" class="form-control"/>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group scale-in-center">
                    <label asp-for="Input.Password" class="d-block text-right">رمز عبور</label>
                    <input asp-for="Input.Password" class="form-control"/>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group scale-in-center">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe"/>
                            مرا بخاطر بسپار
                        </label>
                    </div>
                </div>
                <div class="form-group scale-in-center">
                    <button type="submit" class="btn btn-outline-info ml-auto">ورود</button>
                </div>
                <div class="form-group scale-in-center">
                    <p>
                        <!-- <a asp-page="./ForgotPassword">Forgot your password?</a> -->
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">ثبت نام</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
    <div class="col-0 col-md-4"></div>
