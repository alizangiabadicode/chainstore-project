@model IEnumerable<Products>
@{
    ViewData["Title"] = "Index";
}
<br />
<div class="row">
    <div class="col-6 scale-up-center">
        <h2 class="text-info">
            Products
        </h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info  scale-up-center"><i class="fas fa-plus-circle"></i>&nbsp; Add New Product</a>
    </div>
</div>
<br />
<table class="table table-striped border">
    <tr class="table-info scale-up-center">
        <th>@Html.DisplayNameFor(m => m.Name)</th>
        <th>@Html.DisplayNameFor(m => m.Price)</th>
        <th>@Html.DisplayNameFor(m => m.Available)</th>
        <th>@Html.DisplayNameFor(m => m.ProductTypes)</th>
        <th>@Html.DisplayNameFor(m => m.SpecialTags)</th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr class="scale-up-center">
            <td>@Html.DisplayFor(m => item.Name)</td>
            <td>@string.Format("{0:C}", item.Price)</td>
            <td>@Html.DisplayFor(m => item.Available)</td>
            <td>@Html.DisplayFor(m => item.ProductTypes.Name)</td>
            <td>@Html.DisplayFor(m => item.SpecialTags.Name)</td>
            <td>
                <partial name="_TableButtonPartial" model="@item.Id" />
            </td>
        </tr>
    }
</table>
@section Scripts{
    @if (ViewBag.edit != null && ViewBag.edit)
    {
        <script>
            swal({
                title: "Edited!",
                text: "",
                icon: "success",
                button: "OK",
            });
        </script>
    }
    else if (ViewBag.delete != null && ViewBag.delete)
    {
        <script>
            swal({
                title: "Deleted!",
                text: "",
                icon: "error",
                button: "OK",
            });
        </script>
    }
    else if (ViewBag.create != null && ViewBag.create)
    {
        <script>
            swal({
                title: "Created!",
                text: "",
                icon: "info",
                button: "OK",
            });
        </script>

    }

}