@model ApplicationUser
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<form method="post">
    <h2 class="text-info text-center scale-in-center">
        Edit Admin Users
    </h2>
    <div class="row">
        <div class="col-2"></div>
        <div class="col-8">
            <div class="border p-4 rounded justify-content-center scale-in-center">
                <div class="bodyG">
                    <div class="container">
                        <div class="row">
                            <div class="col-2">

                            </div>
                            
                            
                            <div class="col-8">
                                
                                <div class="group">
                                    <input asp-for="Name" class="inputG scale-in-center" type="text" required>
                                    <span class=""></span>
                                    <span class="bar"></span>
                                    <label class="labelG scale-in-center">Name</label>
                                </div>
                                <br />

                                <div class="group">
                                    <input asp-for="Email" readonly class="inputG scale-in-center" type="text" required>
                                    <span class=""></span>
                                    <span class="bar"></span>
                                    <label class="labelG scale-in-center">Email</label>
                                </div>
                                <br/>
                                <div class="group">
                                    <input asp-for="PhoneNumber" class="inputG scale-in-center" type="text" required>
                                    <span class=""></span>
                                    <span class="bar"></span>
                                    <label class="labelG scale-in-center">Phone number</label>
                                </div>
                                <br/>
                                <div class="btn-group">
                                    <button type="submit" class="btn btn-primary scale-in-center" asp-action="Edit">Edit</button>
                                    <a asp-action="Index" class="btn btn-success scale-in-center">Back To List</a>
                                </div>

                            </div>
                            <div class="col-2"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-2"></div>
    </div>
</form>


































